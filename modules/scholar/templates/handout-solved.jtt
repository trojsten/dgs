(@ extends 'handout-students.jtt' @)

(@ block solutions @)
    \newpage
    (@ if issue.problems @)
        \subsection{(* captions.solutions|capitalize *)}
        (@ for problem in issue.problems @)
            \subsubsection{(* captions.problem|capitalize *) (* loop.index *)}
            \protectedInput{\activeDirectory/(* problem.id *)/solution.tex}
        (@ endfor @)
    (@ endif @)
(@ endblock solutions @)
